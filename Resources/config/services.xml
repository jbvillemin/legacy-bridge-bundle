<?xml version="1.0" ?>

<container xmlns="http://symfony.com/schema/dic/services"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://symfony.com/schema/dic/services http://symfony.com/schema/dic/services/services-1.0.xsd">

    <services>
        <!-- Kernel -->
        <service id="jybeul_legacy_bridge.legacy_kernel"
            class="Jybeul\LegacyBridgeBundle\Kernel\LegacyKernel">
            <argument/>
            <argument type="service" id="jybeul_legacy_bridge.htaccess_handler"/>
            <argument type="service" id="router"/>
            <!-- log -->
            <call method="setLogger">
                <argument type="service" id="logger"/>
            </call>
            <!-- container -->
            <call method="setContainer">
                <argument type="service" id="service_container"/>
            </call>
            <tag name="monolog.logger" channel="jybeul_legacy"/>
        </service>

        <service id="jybeul_legacy_bridge.htaccess_handler"
            class="Jybeul\LegacyBridgeBundle\Kernel\HtaccessHandler"
            public="false"/>

        <!-- Security -->
        <service id="jybeul_legacy_bridge.security.authentication.legacy_provider"
            class="Jybeul\LegacyBridgeBundle\Security\Core\Authentication\Provider\LegacyProvider"
            public="false"
            abstract="true">
            <argument /> <!-- User Provider -->
            <argument /> <!-- Legacy Session StorageHandler -->
        </service>

        <service id="jybeul_legacy_bridge.security.authentication.legacy_listener"
            class="Jybeul\LegacyBridgeBundle\Security\Http\Firewall\LegacySessionListener"
            public="false"
            abstract="true">
            <argument type="service" id="security.token_storage" />
            <argument type="service" id="security.authentication.manager" />
            <argument /> <!-- Legacy Session Cookie name -->
            <argument /> <!-- User Provider -->
            <argument /> <!-- User Checker -->
            <argument /> <!--  Provider Key -->
        </service>
    </services>
</container>
